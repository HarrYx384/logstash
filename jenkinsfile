pipeline {
    agent any
    stages {
        stage ("code checkout"){
            steps{
                git branch: 'main', credentialsId: 'hudson', url: 'https://github.com/HarrYx384/logstash.git'
            }
        }
        stage("install packer on slave"){
            steps{
            sh 'sudo su'
            sh 'yum-config-manager --add-repo https://rpm.releases.hashicorp.com/AmazonLinux/hashicorp.repo'
            sh 'yum -y install packer'
            }
        }
        stage("now trigger packer"){
            steps{
            sh 'packer build packer.json'
            }
        }
    }
}
