pipeline {
    agent any
    stages {
        stage ("code checkout"){
            steps{
                git branch: 'main', credentialsId: 'hudson', url: 'https://github.com/HarrYx384/logstash.git'
            }
        }
        stage("now trigger packer"){
            steps{
                sh 'export PACKER_LOG=1'
                sh 'export PACKER_LOG_PATH=$WORKSPACE/packer.log'
                sh 'echo "packer log path:" $PACKER_LOG_PATH'
                sh 'packer build packer.json'
            }
        }
    }
}
